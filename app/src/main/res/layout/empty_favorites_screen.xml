<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/background"
    android:id="@+id/empty_fav_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.FavouriteFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/empty_fav_screen"
        style="@style/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icons8_mush"
            android:layout_width="211dp"
            android:layout_height="211dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:alpha="1"
            android:padding="@dimen/padding_mid"
            android:src="@mipmap/fav"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.359" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/your_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="4sp"
            android:padding="@dimen/padding_8dp"
            android:text="@string/your_favorites"
            android:textAppearance="@style/your_favourite"
            app:layout_constraintEnd_toEndOf="@+id/icons8_mush"
            app:layout_constraintStart_toStartOf="@+id/icons8_mush"
            app:layout_constraintTop_toBottomOf="@+id/icons8_mush" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/explore_foo"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="4sp"
            android:text="@string/explore_food"
            android:textAppearance="@style/explore_food"
            app:layout_constraintEnd_toEndOf="@+id/your_favourite"
            app:layout_constraintStart_toStartOf="@+id/your_favourite"
            app:layout_constraintTop_toBottomOf="@+id/your_favourite" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
