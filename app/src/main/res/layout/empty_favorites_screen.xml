<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            app:title="@string/favourite"
            app:titleTextColor="@color/black" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icons8_mush"
            android:layout_width="211dp"
            android:layout_height="211dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/padding_mid"
            android:src="@mipmap/fav"
            android:alpha="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/your_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="4sp"
            android:padding="@dimen/padding_small"
            android:text="@string/your_favorites"
            android:textAppearance="@style/your_favourite"
            app:layout_constraintEnd_toEndOf="@+id/icons8_mush"
            app:layout_constraintStart_toStartOf="@+id/icons8_mush"
            app:layout_constraintTop_toBottomOf="@+id/icons8_mush" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/explore_foo"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="4sp"
            android:text="@string/explore_food"
            android:textAppearance="@style/explore_food"
            app:layout_constraintEnd_toEndOf="@+id/your_favourite"
            app:layout_constraintStart_toStartOf="@+id/your_favourite"
            app:layout_constraintTop_toBottomOf="@+id/your_favourite" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>