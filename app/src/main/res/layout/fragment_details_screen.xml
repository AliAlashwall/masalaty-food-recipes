<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView_recipe"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_app_bar"
        app:shapeAppearanceOverlay="@style/roundedImage" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/icon_1"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/card_icon"
        android:drawableTop="@drawable/group"
        android:orientation="vertical"
        android:padding="8dp"
        android:text="20 min"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@id/icon_2"
        app:layout_constraintStart_toStartOf="@+id/imageView_recipe"
        app:layout_constraintTop_toBottomOf="@+id/imageView_recipe" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/icon_3"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/card_icon"
        android:drawableTop="@drawable/square_share_line2"
        android:padding="8dp"
        android:text="More Info"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/imageView_recipe"
        app:layout_constraintStart_toEndOf="@id/icon_2"
        app:layout_constraintTop_toTopOf="@+id/icon_2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/icon_2"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/card_icon"
        android:drawableTop="@drawable/dish_svgrepo_com_2"
        android:padding="8dp"
        android:text="4"
        app:layout_constraintEnd_toStartOf="@+id/icon_3"
        app:layout_constraintStart_toEndOf="@+id/icon_1"
        app:layout_constraintTop_toTopOf="@+id/icon_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Masala Karela Recipe"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_1" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:tabIndicator="@drawable/button"
        app:tabIndicatorColor="@null"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorGravity="stretch"
        app:tabSelectedTextColor="@color/black">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions" />
    </com.google.android.material.tabs.TabLayout>



</androidx.constraintlayout.widget.ConstraintLayout>



