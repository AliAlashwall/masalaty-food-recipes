<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="156dp"
    android:layout_height="160dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:elevation="6dp"
    app:cardCornerRadius="12dp"
    style="@style/grdientCard"


    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"

        >



        <ImageView
            android:id="@+id/imageview"
            tools:background="@drawable/pizza"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <View
            style="@style/grdient_Card"
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/textView_cuisines"
            android:layout_width="119dp"
            android:layout_height="21dp"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            android:textStyle="normal"
            android:background="@color/white_45"
            app:layout_constraintBottom_toTopOf="@id/textView_numberOfItems"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="item" />

        <TextView
            android:id="@+id/textView_numberOfItems"
            android:layout_width="119dp"
            android:layout_height="21dp"
            android:layout_gravity="bottom"
            android:textSize="14sp"
            android:textStyle="normal"
            android:background="@color/white_45"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/textView_cuisines"
            tools:text="item" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
