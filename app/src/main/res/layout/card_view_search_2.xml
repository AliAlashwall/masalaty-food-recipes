<!-- card_item.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_random_recipe"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_launcher_background"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="176dp"
        android:layout_height="24dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/imageView_random_recipe"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="16dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_bottom"
        android:layout_marginBottom="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="@id/titleTextView"
        >

        <TextView
            android:id="@+id/textView_time"
            android:layout_width="44dp"
            android:layout_height="21dp"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@id/drawable_recipe"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/drawable_recipe"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView_time"
            app:layout_constraintStart_toStartOf="@id/layout_bottom" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/drawable_favorite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/titleTextView"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
