<resources>    <!-- Base application theme. -->
    <style name="Base.Theme.Masalafoodrecipes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Masalafoodrecipes" parent="Base.Theme.Masalafoodrecipes" />

    <style name="masalaty">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="favorite">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_brown</item>
    </style>

    <style name="your_favourite">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_brown</item>
    </style>

    <style name="explore_food">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darker_gray</item>
    </style>

    <style name="supporting_">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="your_search">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/brown</item>
    </style>

    <style name="Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/orange</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/orange</item>
    </style>

    <style name="card_and_bottomNavigationBackground">
        <item name="android:background">@color/off_white</item>
    </style>

    <style name="tabLayout">
        <item name="tabTextColor">@color/gray_30</item>
        <item name="android:backgroundTint">@color/light_orange</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="vectorColor">
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="navigationColor">
        <item name="navigationIconTint">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="recipeCard">
        <item name="android:textColor">@color/dark_brown</item>
        <item name="android:drawableTint">@color/brown</item>
        <item name="backgroundTint">@color/light_orange</item>
    </style>

    <style name="timerStyle">
        <item name="drawableTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/light_orange</item>
    </style>

    <style name="number">
        <item name="android:background">@drawable/number</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="roundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="details">
        <item name="android:background">@drawable/card_icon</item>
        <item name="android:drawableTint">@color/light_black</item>
        <item name="android:textColor">@color/brown</item>
    </style>

    <style name="viewPagerText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="backgroundTint">
        <item name="android:backgroundTint">@color/off_white</item>
    </style>
</resources>