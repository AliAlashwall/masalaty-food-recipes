<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Masalafoodrecipes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:statusBarColor">#1F1F1F</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="your_favourite">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="explore_food">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_45</item>
    </style>

    <style name="your_search">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tabLayout">
        <item name="tabTextColor">@color/white_45</item>
        <item name="android:backgroundTint">@color/gray_30</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="card_and_bottomNavigationBackground">
        <item name="android:background">@color/light_black_2</item>
    </style>

    <style name="vectorColor">
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="navigationColor">
        <item name="navigationIconTint">@color/white</item>
        <item name="android:background">#1F1F1F</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="recipeCard">
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/light_gray</item>
        <item name="backgroundTint">@color/gray_38</item>
    </style>

    <style name="timerStyle">
        <item name="drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/gray_38</item>
    </style>

    <style name="number">
        <item name="android:background">@drawable/number_dark</item>
        <item name="android:textColor">@color/white_45</item>
    </style>

    <style name="background">
        <item name="android:background">#1F1F1F</item>
    </style>

    <style name="details">
        <item name="android:background">@drawable/card_icon_dark</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white_45</item>
    </style>

    <style name="viewPagerText">
        <item name="android:textColor">@color/white_45</item>
    </style>

    <style name="backgroundTint">
        <item name="android:backgroundTint">@color/light_black_2</item>
    </style>
</resources>