<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Masalafoodrecipes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:statusBarColor">#1F1F1F</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="cardBackground">
        <item name="background">@color/dark_gray</item>
    </style>

    <style name="bottomNavigationBackground">
        <item name="android:background">@color/light_black_2</item>
    </style>

    <style name="vectorColor">
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="navigationColor">
        <item name="navigationIconTint">@color/white</item>
        <item name="android:background">#1F1F1F</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="recipeCard">
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/light_gray</item>
        <item name="backgroundTint">@color/gray_38</item>
    </style>

    <style name="timerStyle">
        <item name="drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/gray_38</item>
    </style>

    <style name="appBarBackground">
        <item name="android:background">#1F1F1F</item>
    </style>

    <style name="background">
        <item name="android:background">#1F1F1F</item>
    </style>

    <style name="your_favourite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="explore_food">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#d1d1d1</item>
    </style>
</resources>